<h1>Novo Announcement</h1>

<div class="form">
<% form_for :post, :url => "/admin/new_post" do |f| %>
	<fieldset class="mb">
		
		<p>
			<label for="title">Title:</label><br>
			<%= f.text_field "title" %>
		</p>

		<p>
			<label for="body">Body:</label><br>
			<%= f.text_area "body" %>
		</p>
	</fieldset>
<p><%= submit_tag 'Sign in &raquo;', :disable_with => "Signing in&hellip;" %></p>
<% end %>
</div>